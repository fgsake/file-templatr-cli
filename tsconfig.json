{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "bin",
    // "rootDirs": ["src/", "config/"],
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
  },
  "include": ["src"],
  "exclude": ["test-output"],
  "ts-node": {
    "transpileOnly": false,
    "files": true
  }
}